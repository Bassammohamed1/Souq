@model List<BaseModel>
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<style>
    html,
    body {
        position: relative;
        height: 100%;
    }

    body {
        font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
        font-size: 14px;
        color: #000;
        margin: 0;
        padding: 0;
    }

    .swiper {
        width: 100%;
        height: 100%;
    }

    .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="swiper">
            <div class="swiper-wrapper">
                <div class="swiper-slide"> <a asp-controller="ComputerAccessories" asp-action="Index"><img src="~/imgs/ComputerAccessories.png" class="catItem" /></a></div>
                <div class="swiper-slide"> <a asp-controller="ElectricalDevices" asp-action="Index"><img src="~/imgs/Electrical.jpg" class="catItem" /></a></div>
                <div class="swiper-slide"> <a asp-controller="Laptops" asp-action="Index"><img src="~/imgs/Laptops.jpg" class="catItem" /></a></div>
                <div class="swiper-slide"> <a asp-controller="MobilesAndTablets" asp-action="Index"><img src="~/imgs/Phonetablet.jpg" class="catItem" /></a></div>
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Recently Added</h2>
        </div>
        <div class="swiper">
            <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    if (item.Name.Contains("Keyboard"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="ComputerAccessories" asp-action="KeyboardDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("Mouse"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="ComputerAccessories" asp-action="MouseDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("Headphone"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="ComputerAccessories" asp-action="HeadphoneDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("Fridge"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="ElectricalDevices" asp-action="FridgeDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("TV"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="ElectricalDevices" asp-action="TvDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("WashingMachine"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="ElectricalDevices" asp-action="WashingMachineDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("GasStove"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="ElectricalDevices" asp-action="GasStoveDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("Dell"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="Laptops" asp-action="DellDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("HP"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="Laptops" asp-action="HpDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("Lenovo"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="Laptops" asp-action="LenovoDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("Mac"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="Laptops" asp-action="MacDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("iPhone") || item.Name.Contains("iPad"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="MobilesAndTablets" asp-action="IPhoneAndIPadDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("Samsung"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="MobilesAndTablets" asp-action="SamsungDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("Xiaomi"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="MobilesAndTablets" asp-action="XiaomiDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("Huawei"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="MobilesAndTablets" asp-action="HuaweiDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                    else if (item.Name.Contains("Oppo"))
                    {
                        <div class="swiper-slide">
                            <a asp-controller="MobilesAndTablets" asp-action="OppoDetails" asp-route-id="@item.Id"><img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" /></a>
                        </div>
                    }
                }
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
    var swiper = new Swiper('.swiper', {
        slidesPerView: 3,
        direction: getDirection(),
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        on: {
            resize: function () {
                swiper.changeDirection(getDirection());
            },
        },
    });
    function getDirection() {
        var windowWidth = window.innerWidth;
        var direction = window.innerWidth <= 760 ? 'vertical' : 'horizontal';

        return direction;
    }
</script>