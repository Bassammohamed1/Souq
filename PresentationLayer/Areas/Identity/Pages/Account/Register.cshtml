@page
@using PresentationLayer.Areas.Identity.Pages.Account
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<style>
    body.auth-bg {
        background-color: #0e0e0e;
        background-image: radial-gradient(circle at top left, rgba(212, 175, 55, 0.15), transparent 70%);
        min-height: 100vh;
    }

    .auth-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(212, 175, 55, 0.3);
        backdrop-filter: blur(12px);
        border-radius: 15px;
        padding: 2rem;
        color: #fff;
        box-shadow: 0 4px 20px rgba(0,0,0,0.5);
    }

        .auth-card h2 {
            color: #d4af37;
            font-weight: bold;
        }

    .btn-gold {
        background-color: #d4af37;
        color: #000;
        border-radius: 30px;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-gold:hover {
            background-color: #b9962d;
            transform: scale(1.03);
        }

    .form-control {
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(212, 175, 55, 0.3);
        color: #fff;
        border-radius: 10px;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.12);
            border-color: #d4af37;
            box-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
        }

    a.text-gold {
        color: #d4af37 !important;
        text-decoration: none;
    }

        a.text-gold:hover {
            text-decoration: underline;
        }

</style>

<body class="auth-bg d-flex align-items-center justify-content-center">
    <div class="auth-card text-center" style="max-width: 450px; width: 100%;">
        <h2 class="mb-4">Join Souq</h2>
        <p class="mb-4">Create your free account today</p>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="mb-3 text-start">
                <label asp-for="Input.UserName" class="form-label text-gold"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Input.Email" class="form-label text-gold"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Input.Password" class="form-label text-gold"></label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3 text-start">
                <label asp-for="Input.ConfirmPassword" class="form-label text-gold"></label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-gold w-100 mb-3">Register</button>
            <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-gold">Login</a></p>
        </form>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}