@model Department
@{
    ViewData["Title"] = "Delete Department";
}
<form method="post">
    <div class="card" style="margin-top:25px; padding:20px;">
        <h4>Are you sure you want to delete this department</h4>
        <div class="buttons" style="padding-top:10px;">
            <button type="submit" class="btn btn-danger">Okay</button>
            <a asp-controller="Departments" asp-action="Index" class="btn btn-dark">
                Back to Departments
            </a>
        </div>
    </div>
</form>