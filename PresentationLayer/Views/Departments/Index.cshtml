@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Departments</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Departments" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Add New
            </a>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Description
                </th>
                <th scope="col">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope ="row">
                        @item.Name
                    </td>
                    <td width="50%">
                        @item.Description
                    </td>
                    <td>
                        <a asp-controller="Departments" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-sm btn-success">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-controller="Departments" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>