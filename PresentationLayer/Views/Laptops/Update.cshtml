@model Laptop
@{
    ViewData["Title"] = "Update Laptop";
}
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-black">Update Laptop</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewPrice"></label>
            <input asp-for="NewPrice" class="form-control" />
            <span asp-validation-for="NewPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IsDiscounted"></label>
            <input asp-for="IsDiscounted" class="form-control" />
            <span asp-validation-for="IsDiscounted" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Rate"></label>
            <input asp-for="Rate" class="form-control" />
            <span asp-validation-for="Rate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AddedOn"></label>
            <input asp-for="AddedOn" class="form-control" />
            <span asp-validation-for="AddedOn" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ScreenSize"></label>
            <input asp-for="ScreenSize" class="form-control" />
            <span asp-validation-for="ScreenSize" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Color"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ModelName"></label>
            <input asp-for="ModelName" class="form-control" />
            <span asp-validation-for="ModelName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RAM"></label>
            <input asp-for="RAM" class="form-control" />
            <span asp-validation-for="RAM" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HardDiskSize"></label>
            <input asp-for="HardDiskSize" class="form-control" />
            <span asp-validation-for="HardDiskSize" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HardDiskDescription"></label>
            <input asp-for="HardDiskDescription" class="form-control" />
            <span asp-validation-for="HardDiskDescription" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CPU"></label>
            <input asp-for="CPU" class="form-control" />
            <span asp-validation-for="CPU" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="GPU"></label>
            <input asp-for="GPU" class="form-control" />
            <span asp-validation-for="GPU" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OperatingSystem"></label>
            <input asp-for="OperatingSystem" class="form-control" />
            <span asp-validation-for="OperatingSystem" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-select" asp-items="@ViewBag.categoriesViewBag"></select>
            <span asp-validation-for="CategoryId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="clientFile"></label>
            <input type="file" asp-for="clientFile" class="form-control" />
            <span asp-validation-for="clientFile" class="text-danger"></span>
        </div>
        <button type="submit" class="btn bg-gold">Save</button>
        <a asp-action="IndexAdmin" asp-controller="Laptops" class="btn btn-dark">
            Back to Laptops
        </a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}