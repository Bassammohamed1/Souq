@model Item
@{
    ViewData["Title"] = "Update Item";
}

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Item</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AddedOn"></label>
            <input asp-for="AddedOn" class="form-control" />
            <span asp-validation-for="AddedOn" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ItemType"></label>
            <input asp-for="ItemType" class="form-control" />
            <span asp-validation-for="ItemType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DepartmentID"></label>
            <select asp-for="DepartmentID" class="form-select" asp-items="@ViewBag.MyBag"></select>
            <span asp-validation-for="DepartmentID"></span>
        </div>
        <div class="mb-3">
            <label asp-for="clientFile"></label>
            <input type="file" asp-for="clientFile" class="form-control" />
            <span asp-validation-for="clientFile" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="Items" class="btn btn-secondary">
            Back To Items
        </a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}