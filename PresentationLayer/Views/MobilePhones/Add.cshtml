@model MobilePhone
@{
    ViewData["Title"] = "Add MobilePhone";
}
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-black">Add New MobilePhone</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Color"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CPUModel"></label>
            <input asp-for="CPUModel" class="form-control" />
            <span asp-validation-for="CPUModel" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RAM"></label>
            <input asp-for="RAM" class="form-control" />
            <span asp-validation-for="RAM" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MemoryStorageCapacity"></label>
            <input asp-for="MemoryStorageCapacity" class="form-control" />
            <span asp-validation-for="MemoryStorageCapacity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OperatingSystem"></label>
            <input asp-for="OperatingSystem" class="form-control" />
            <span asp-validation-for="OperatingSystem" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-select" asp-items="@ViewBag.categoriesViewBag"></select>
            <span asp-validation-for="CategoryId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="clientFile"></label>
            <input type="file" asp-for="clientFile" class="form-control" />
            <span asp-validation-for="clientFile" class="text-danger"></span>
        </div>
        <button type="submit" class="btn bg-gold">Save</button>
        <a asp-action="IndexAdmin" asp-controller="MobilePhones" class="btn btn-dark">
            Back to MobilePhones
        </a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}