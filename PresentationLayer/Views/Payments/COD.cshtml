@model Order

@{
    ViewData["Title"] = "Cash on Delivery - Confirmation";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="mb-4 text-black">Order Placed Successfully</h2>
        <p class="lead">You have chosen <strong>Cash on Delivery</strong>.</p>
        <p>Please prepare the amount upon delivery.</p>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-bold">Order Summary</h5>
        </div>
        <div class="card-body">
            <p><strong>Order ID:</strong>@Model.ID</p>
            <p><strong>Total Price:</strong>@Model.OrderDetails.Sum(od => od.Price * od.Quantity) EGP</p>
            <p><strong>Payment Method:</strong> Cash on Delivery</p>
            <p><strong>Status:</strong> Confirmed</p>
        </div>
    </div>

    <div class="text-start mt-4">
        <a asp-controller="Home" asp-action="Index" class="text-decoration-none btn bg-gold">Back Home</a>
    </div>
</div>