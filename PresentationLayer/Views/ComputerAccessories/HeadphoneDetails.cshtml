@model Item
@{
    ViewData["Title"] = "Headphone";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@Model.Name</h2>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    Image
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-primary">
                <td scope="row">
                    <img class="rounded-circle" src="@Model.imageSrc" alt="@Model.Name" style="width:170px; height:170px; max-width:100%" />
                </td>
                <td scope="row">
                    @Model.Name
                </td>
                <td scope="row">
                    @Model.Price $
                </td>
                <td scope="row">
                    <button type="button" onclick="add(@Model.Id)" class="btn btn-primary">Add to cart</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        async function add(itemId) {
            try {
                var response = await fetch(`/Cart/AddItem?itemId=${itemId}`);
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
}