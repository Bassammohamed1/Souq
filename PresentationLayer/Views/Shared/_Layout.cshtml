<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Souq</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Souq.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.xyz/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Souq</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-list"></i> Categories
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="ComputerAccessories" asp-action="Index"><i class="bi bi-mouse"></i>Computer Accessories</a>
                                <a class="dropdown-item" asp-controller="ElectricalDevices" asp-action="Index"><i class="bi bi-display"></i> Electrical Devices</a>
                                <a class="dropdown-item" asp-controller="Laptops" asp-action="Index"><i class="bi bi-laptop"></i> Laptops</a>
                                <a class="dropdown-item" asp-controller="MobilesAndTablets" asp-action="Index"><i class="bi bi-phone"></i> Mobile And Tablet</a>
                            </div>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-gear"></i> Management
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Items" asp-action="Index"><i class="bi bi-clipboard-data"></i> Items</a>
                                    <a class="dropdown-item" asp-controller="ComputerAccessories" asp-action="Details"><i class="bi bi-mouse"></i> Computer Accessories</a>
                                    <a class="dropdown-item" asp-controller="ElectricalDevices" asp-action="Details"><i class="bi bi-display"></i> Electrical Devices</a>
                                    <a class="dropdown-item" asp-controller="Laptops" asp-action="Details"><i class="bi bi-laptop"></i> Laptops</a>
                                    <a class="dropdown-item" asp-controller="MobilesAndTablets" asp-action="Details"><i class="bi bi-phone"></i> Mobile And Tablet</a>
                                    <a class="dropdown-item" asp-controller="Roles" asp-action="Index"><i class="bi bi-card-text"></i> Roles</a>
                                    <a class="dropdown-item" asp-controller="Users" asp-action="Index"><i class="bi bi-people-fill"></i> Users</a>
                                    <a class="dropdown-item" asp-controller="Orders" asp-action="UserOrders"><i class="bi bi-cart-check-fill"></i> Orders</a>
                                </div>
                            </li>
                        }
                    </ul>

                    <form class="d-flex" asp-controller="Home" asp-action="Filter">
                        <input name="searchString" type="text" class="form-control" placeholder="What Are You Looking For?" aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-dark my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Souq - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        loadCartCount();
        async function loadCartCount() {
            try {
                var response = await fetch(`/Cart/GetTotalItemInCart`);
                console.log(response)
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
