<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Souq</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Souq.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400;1,700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-white text-black" data-bs-theme="light">
            <div class="container-fluid d-flex justify-content-between align-items-center flex-wrap">
                <div class="d-flex align-items-center gap-3">
                    <a class="navbar-brand text-black fw-bold fs-4 fst-italic" asp-controller="Home" asp-action="Index">Souq</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="text-decoration-none rounded-pill dashboard-link fs-6 d-flex align-items-center gap-1" asp-controller="Dashboard" asp-action="Dashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    }

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="search-section d-flex align-items-center mx-auto">
                    <select class="search-dropdown" id="departmentDropdown">
                        <option>All</option>
                        @foreach (var department in (ViewData["Departments"] as IEnumerable<Department>) ?? Enumerable.Empty<Department>())
                        {
                            var nameAfterSplit = department.Name.Split(' ');
                            string controllerName = nameAfterSplit[0];
                            for (int i = 1; i < nameAfterSplit.Length; i++)
                            {
                                controllerName += nameAfterSplit[i];
                            }
                            <option value="@controllerName">@department.Name</option>
                        }
                    </select>

                    <input type="text" class="search-box" placeholder="Search Souq.eg" id="searchBox">
                    <a id="searchBtn" class="text-decoration-none" asp-action="Filter" asp-route-key="">
                        <i class="bi bi-search btn bg-gold"></i>
                    </a>
                </div>

                <partial name="_LoginPartial" />
            </div>

        </nav>
        @{
            string currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        }
        <div class="second-nav-section">
            <a asp-controller="Home" asp-action="Index"
               class="text-decoration-none" style="color:gold">Home</a>

            @foreach (var department in (ViewData["Departments"] as IEnumerable<Department>) ?? Enumerable.Empty<Department>())
            {
                var nameAfterSplit = department.Name.Split(' ');
                string controllerName = nameAfterSplit[0];
                for (int i = 1; i < nameAfterSplit.Length; i++)
                {
                    controllerName += nameAfterSplit[i];
                }

                var isActive = currentController == controllerName ? "active-home-link" : "";

                <a asp-controller="@controllerName" asp-action="Index"
                   class="text-decoration-none @isActive"
                   style="color:gold">@department.Name</a>
            }

        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        loadCartCount();
        async function loadCartCount() {
            try {
                var response = await fetch(`/Cart/GetTotalItemInCart`);
                console.log(response)
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                }
            }
            catch (err) {
                console.log(err);
            }
        }

        loadwishListCount();
        async function loadwishListCount() {
            try {
                var response = await fetch(`/UserInteractions/GetTotalItemInWishingList`);
                console.log(response)
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("wishCount");
                    cartCountEl.innerHTML = result;
                }
            }
            catch (err) {
                console.log(err);
            }
        }

            document.getElementById("searchBtn").addEventListener("click", function (e) {
                e.preventDefault();
                const key = document.getElementById("searchBox").value.trim();
                if (key) {
                    window.location.href = `/Home/Filter?key=${encodeURIComponent(key)}`;
                }
            });
    </script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Support" asp-action="AdminChat" class="customer-service-button" title="Chat with Us">
            <i class="bi bi-chat-dots"></i>
        </a>
    }
    else
    {
        <a asp-controller="Support" asp-action="UserChat" class="customer-service-button" title="Chat with Us">
            <i class="bi bi-chat-dots"></i>
        </a>
    }

</body>
</html>
