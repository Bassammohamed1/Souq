@model HomePageViewModel

@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

<!-- Hero Banner -->
<div class="hero-section text-dark d-flex align-items-center" style="center/cover; height: 65vh;">
    <div class="container text-center">
        <h1 class="display-3 fw-bold mb-3">Welcome to Souq</h1>
        <p class="lead mb-4">Exclusive deals on the latest products — shop smarter today</p>
        <a href="#featured-products" class="btn bg-gold btn-lg rounded-pill px-5 shadow">Shop Now</a>
    </div>
</div>

<!-- Categories Section -->
<div class="container my-5">
    <h2 class="text-center mb-5 fw-bold">Shop by Category</h2>
    <div class="row text-center g-4 justify-content-around">
        @foreach (var department in Model.Departments)
        {
            var nameAfterSplit = department.Name.Split(' ');
            string controllerName = nameAfterSplit[0];
            for (int i = 1; i < nameAfterSplit.Length; i++)
            {
                controllerName += nameAfterSplit[i];
            }

            <div class="col-6 col-md-4 col-lg-2">
                <div class="category-card p-3 border-0 shadow-sm rounded h-100">
                    <a asp-controller="@controllerName" asp-action="Index" class="text-decoration-none">
                        <img src="@Url.Content($"~/imgs/{department.Name}.png")"
                             class="img-fluid mb-3"
                             alt="@department.Name">
                        <h6 class="fw-bold text-black">@department.Name</h6>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Featured Products -->
<div id="featured-products" class="container my-5">
    <h2 class="text-center mb-5 fw-bold">Featured Products</h2>
    <div class="row g-4">
        @foreach (var item in Model.Featured)
        {
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm h-100 product-card">
                    <div class="image-container">
                        <img src="@item.imageSrc" class="card-img-top" alt="@item.Name">
                    </div>
                    <div class="card-body text-center">
                        <h6 class="product-title">
                            @(item.Name.Length > 50 ? item.Name.Substring(0, 50) + "..." : item.Name)
                        </h6>
                        <p class="price">
                            @if (item.NewPrice > 0)
                            {
                                <span>EGP @item.NewPrice</span>
                                <span style="  text-decoration: line-through;color: #888;">EGP @item.Price</span>
                            }
                            else
                            {
                                <span>EGP @item.Price</span>
                            }
                        </p>
                        <a asp-route-id="@item.ID" asp-action="Details" class="btn btn-outline-dark btn-sm">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Offers -->
<div class="container my-5">
    <h2 class="text-center mb-5 fw-bold text-danger">Special Offers</h2>

    <div class="swiper">
        <div class="swiper-wrapper">
            @foreach (var offer in Model.Offers)
            {
                <div class="swiper-slide">
                    <div class="offer-card position-relative overflow-hidden rounded shadow-sm">
                        <img src="@offer.ImageSrc" alt="@offer.OfferType">
                        <div class="offer-overlay d-flex align-items-center justify-content-center">
                            <a asp-action="OfferDetails" asp-route-id="@offer.ID" class="btn btn-dark fw-bold">Shop Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Latest Products -->
<div class="container my-5">
    <h2 class="text-center mb-5 fw-bold">Latest Products</h2>
    <div class="row g-4">
        @foreach (var item in Model.Latest)
        {
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm h-100 product-card">
                    <div class="image-container">
                        <img src="@item.imageSrc" class="card-img-top" alt="@item.Name">
                    </div>
                    <div class="card-body text-center">
                        <h6 class="product-title">
                            @(item.Name.Length > 50 ? item.Name.Substring(0, 50) + "..." : item.Name)
                        </h6>
                        <p class="price">
                            @if (item.NewPrice > 0)
                            {
                                <span>EGP @item.NewPrice</span>
                                <span style="text-decoration: line-through;color: #888;">EGP @item.Price</span>
                            }
                            else
                            {
                                <span>EGP @item.Price</span>
                            }
                        </p>
                        <a asp-route-id="@item.ID" asp-action="Details" class="btn btn-outline-dark btn-sm">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Footer -->
<footer class="bg-dark text-white mt-5 pt-5 pb-4">
    <div class="container justify-content-around">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h5 class="fw-bold mb-3">Souq</h5>
                <p>Discover amazing deals and shop from thousands of products at unbeatable prices.</p>
            </div>
            <div class="col-md-2 mb-3">
                <h6 class="fw-bold mb-3">Shop</h6>
                <ul class="list-unstyled">
                    <li><a asp-controller="Electronics" class="text-white-50">Electronics</a></li>
                    <li><a asp-controller="Appliances" class="text-white-50">Appliances</a></li>
                    <li><a asp-controller="Home" class="text-white-50">Home</a></li>
                    <li><a asp-controller="MobilePhones" class="text-white-50">Mobile Phones</a></li>
                    <li><a asp-controller="VideoGames" class="text-white-50">Video Games</a></li>
                </ul>
            </div>
            <div class="col-md-3 mb-3">
                <h6 class="fw-bold mb-3">Follow Us</h6>
                <a href="https://www.linkedin.com/in/bassam-mohamed-52b110262/" class="text-white me-3"><i class="bi bi-linkedin"></i></a>
                <a href="https://github.com/Bassammohamed1" class="text-white me-3"><i class="bi bi-github"></i></a>
                <a href="https://www.facebook.com/bassammohamed333" class="text-white me-3"><i class="bi bi-facebook"></i></a>
            </div>
        </div>
        <hr class="border-secondary mt-4">
        <p class="text-center mb-0">&copy; @DateTime.Now.Year Souq. All Rights Reserved.</p>
    </div>
</footer>

<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
    new Swiper('.swiper', {
        loop: true,
        autoplay: { delay: 3500 },
        effect: 'fade',
        fadeEffect: { crossFade: true },
        slidesPerView: 1
    });
</script>