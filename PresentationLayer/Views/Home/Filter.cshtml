@model IEnumerable<BaseModel>
@{
    ViewData["Title"] = "Items";
}

@if (Model == null)
{
    <h1 style="text-align:center">No Match Results</h1>
}
else
{
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Items</h2>
            </div>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        Image
                    </th>
                    <th scope="col">
                        Name
                    </th>
                    <th scope="col">
                        Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-primary">
                        <td scope="row">
                            <img class="rounded-circle" src="@item.imageSrc" alt="@item.Name" style="width:170px; height:170px; max-width:100%" />
                        </td>
                        <td scope="row">
                            @item.Name
                        </td>
                        <td scope="row">
                            @item.Price $
                        </td>
                        <td scope="row">
                            <a class="btn btn-primary text-white"
                       asp-controller="Orders"
                       asp-action="AddItemToShoppingCart"
                       asp-route-id="@item.Id">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}