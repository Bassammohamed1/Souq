@model CategoryDTO

@{
    ViewData["Title"] = "Delete Category";
}

<form method="post">
    <div class="card" style="margin-top:25px; padding:20px;">
        <h4>Are you sure you want to delete this category</h4>
        <div class="buttons" style="padding-top:10px;">
            <button type="submit" class="btn btn-danger">Okay</button>
            <a asp-controller="Categories" asp-action="Index" class="btn btn-dark">
                Back to Categories
            </a>
        </div>
    </div>
</form>