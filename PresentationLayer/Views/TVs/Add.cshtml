@model TV

@{
    ViewData["Title"] = "Add TV";
}

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-black">Add New TV</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ItemDimensions"></label>
            <input asp-for="ItemDimensions" class="form-control" />
            <span asp-validation-for="ItemDimensions" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ScreenSize"></label>
            <input asp-for="ScreenSize" class="form-control" />
            <span asp-validation-for="ScreenSize" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RefreshRate"></label>
            <input asp-for="RefreshRate" class="form-control" />
            <span asp-validation-for="RefreshRate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Resolution"></label>
            <input asp-for="Resolution" class="form-control" />
            <span asp-validation-for="Resolution" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayTechnology"></label>
            <input asp-for="DisplayTechnology" class="form-control" />
            <span asp-validation-for="DisplayTechnology" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConnectivityTechnology"></label>
            <input asp-for="ConnectivityTechnology" class="form-control" />
            <span asp-validation-for="ConnectivityTechnology" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SpecialFeatures"></label>
            <input asp-for="SpecialFeatures" class="form-control" />
            <span asp-validation-for="SpecialFeatures" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-select" asp-items="@ViewBag.categoriesViewBag"></select>
            <span asp-validation-for="CategoryId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="clientFile"></label>
            <input type="file" asp-for="clientFile" class="form-control" />
            <span asp-validation-for="clientFile" class="text-danger"></span>
        </div>
        <button type="submit" class="btn bg-gold">Save</button>
        <a asp-action="IndexAdmin" asp-controller="TVs" class="btn btn-dark">
            Back to TVs
        </a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}